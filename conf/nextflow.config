/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    NeonDisco Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options separated into run profiles
----------------------------------------------------------------------------------------
*/

// Global default params, used in configs

// Load base.config by default for all pipelines
includeConfig 'base.config'

profiles {
    'persoMode-local' {
        process.executor = 'local'
        workDir = "work"
        docker.enabled = true
        executor.memory = '200 GB'
        dag.overwrite = true
        
        params {
            sampleSpecificNeoPred = true
            cohortWideNeoPred = false
            recurrentFusionsOnly = false
        }
    }
    
    'popMode-local' {
        process.executor = 'local'
        workDir = "work"
        docker.enabled = true
        executor.memory = '200 GB'
        dag.overwrite = true
        
        params {
            sampleSpecificNeoPred = false
            cohortWideNeoPred = true
            recurrentFusionsOnly = true
        }
    }

    awsbatch {
        // includeConfig 'awsbatch.config'
        process.executor = 'awsbatch'
        docker.enabled = true
    
    }
}